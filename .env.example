# Grocery Store Management System - Environment Variables
# Copy this file to .env and update with your PostgreSQL credentials

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grocery_store
DB_USER=postgres
DB_PASSWORD=your-password-here

# Or use a full DATABASE_URL (takes precedence if set)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/grocery_store

# Testing database (optional)
# TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/grocery_store_test

# Store Information (for receipts)
STORE_NAME=Grocery Store
STORE_ADDRESS=123 Main St
STORE_PHONE=+1 234 567 8900
TAX_RATE=0.08
